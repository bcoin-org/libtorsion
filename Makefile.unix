PKG_VERSION = 0.0.0
ABI_VERSION = 0:0:0

#
# Options
#

PIC =
DESTDIR =
PREFIX = /usr/local
INSTDIR = '$(DESTDIR)$(PREFIX)'

INITIAL_MEMORY = 16777216
MAX_MEMORY = 2147483648
STACK_SIZE = 5242880
ENVIRONMENT = node

#
# Helpers
#

RECURSE = $(MAKE) -f Makefile.unix $(MAKEFLAGS)

LIBTOOL = `glibtool --version > /dev/null 2>&1 && echo glibtool || echo libtool`

LDTOOL = $(LIBTOOL) --tag=CC --mode=link    \
         $(CC) -shared -rpath $(PREFIX)/lib \
               -version-info $(ABI_VERSION)

#
# Library
#

LIB_OBJECTS = aead.o     \
              asn1.o     \
              cipher.o   \
              ecc.o      \
              encoding.o \
              hw.o       \
              sys.o      \
              drbg.o     \
              dsa.o      \
              hash.o     \
              ies.o      \
              internal.o \
              kdf.o      \
              mac.o      \
              mpi.o      \
              rand.o     \
              rsa.o      \
              stream.o   \
              util.o

LIB_CFLAGS = -I./include        \
             -DTORSION_EXPORT   \
             -DTORSION_HAVE_MPI \
             -DTORSION_HAVE_RNG \
             $(PIC)             \
             $(CFLAGS)

#
# Benchmarks
#

BENCH_OBJECTS = bench.o hrtime.o utils.o

#
# Tests
#

TEST_OBJECTS = test.o utils.o

#
# CTGrind
#

CTGRIND_OBJECTS = ctgrind.o utils.o

#
# Cleanup
#

OUTPUT = $(LIB_OBJECTS)      \
         $(BENCH_OBJECTS)    \
         $(TEST_OBJECTS)     \
         $(CTGRIND_OBJECTS)  \
         libtorsion.pc       \
         libtorsion.obj      \
         torsion_bench.obj   \
         torsion_test.obj    \
         torsion_ctgrind.obj \
         libtorsion.a        \
         libtorsion.la       \
         libtorsion.lai      \
         libtorsion.so*      \
         libtorsion.sl*      \
         libtorsion*.dylib   \
         torsion_bench       \
         torsion_test        \
         torsion_ctgrind     \
         libtorsion.lib      \
         torsion.def         \
         torsion.dll         \
         torsion.lib         \
         torsion_bench.exe   \
         torsion_test.exe    \
         torsion.wasm        \
         torsion_bench.wasm  \
         torsion_test.wasm   \
         torsion.js          \
         torsion_bench.js    \
         torsion_test.js

#
# Default Rule
#

all: native

libtool:
	@set -e;                                                              \
	lt=$(LIBTOOL);                                                        \
	if $$lt --version 2> /dev/null | grep 'GNU libtool' > /dev/null; then \
	  eval "`$$lt --config`";                                             \
	  $(RECURSE) PIC="$$pic_flag" all libtorsion.la;                      \
	else                                                                  \
	  echo 'libtool not found!' >& 2;                                     \
	  exit 1;                                                             \
	fi

